---
import Analytics from '@vercel/analytics/astro'
import LanguageIndicator from '../../components/ui/LanguageIndicator.astro';
import PageTransition from '../../components/ui/PageTransition.astro';
import { useTranslations } from '../../i18n/utils';
import '../../styles/animations.css';
import '../../styles/global.css';

const t = useTranslations('en');
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta
      name='description'
      content='Xuby is a fullstack developer with +5 years of experience. Available for freelance projects and custom software development.'
    />
    <link rel='icon' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <script type='application/ld+json'>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Xuby",
        "url": "https://dev.xuby.cl",
        "logo": "https://dev.xuby.cl/logo.png"
      }
    </script>
    <link
      href='https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700&display=swap'
      rel='stylesheet'
    />
    <title>Fullstack Developer | Freelancer in Chile | Xavier DÃ­az</title>
    <link rel="alternate" hreflang="en" href="https://dev.xuby.cl/en/" />
    <link rel="alternate" hreflang="es" href="https://dev.xuby.cl/es/" />
  </head>
  <body>
    <PageTransition />
    <LanguageIndicator />
    <slot />
    
    <script>
      (function(l) {
        if (l.search[1] === '/' ) {
          var decoded = l.search.slice(1).split('&').map(function(s) { 
            return s.replace(/~and~/g, '&')
          }).join('?');
          window.history.replaceState(null, null,
              l.pathname.slice(0, -1) + decoded + l.hash
          );
        }
      }(window.location))
    </script>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overscroll-behavior: none;
  }
</style>
