<section class='text-white p-4'>
  <div class='pt-16'>
    <h1 class='text-3xl font-bold mb-6 text-[#f6ea5d]'>Contact Me</h1>
    <form
      action='https://formspree.io/f/xldlband'
      method='POST'
      class='space-y-6'
    >
      <div>
        <label for='name' class='block mb-1 font-medium'>Name</label>
        <input
          type='text'
          id='name'
          name='name'
          required
          class='w-full px-4 py-2 rounded-md bg-white/10 border border-white/20 focus:outline-none focus:ring-2 focus:ring-[#f6ea5d] placeholder-white/60'
          placeholder='Your name'
        />
      </div>

      <div>
        <label for='email' class='block mb-1 font-medium'>Email</label>
        <input
          type='email'
          id='email'
          name='email'
          required
          class='w-full px-4 py-2 rounded-md bg-white/10 border border-white/20 focus:outline-none focus:ring-2 focus:ring-[#f6ea5d] placeholder-white/60'
          placeholder='your-email@example.com'
        />
      </div>

      <div>
        <label for='message' class='block mb-1 font-medium'>Message</label>
        <textarea
          id='message'
          name='message'
          required
          rows='5'
          class='w-full px-4 py-2 rounded-md bg-white/10 border border-white/20 focus:outline-none focus:ring-2 focus:ring-[#f6ea5d] placeholder-white/60'
          placeholder='How can I help you?'></textarea>
      </div>

      <button
        type='submit'
        class='px-6 py-2 rounded-full bg-[#f6ea5d] text-black font-bold hover:bg-[#e0d850] transition'
      >
        ğŸ“© Send message
      </button>
    </form>
  </div>
</section>
