---
function copyEmail() {
  return `
   navigator.clipboard.writeText('diazxavier27@gmail.com');
   const button = this;
   button.classList.add('bg-[#43d490]/50');
   const toast = document.createElement('div');
   toast.className = 'fixed bottom-4 right-4 bg-[#43d490] text-white px-4 py-2 rounded-lg shadow-lg transform translate-y-0 opacity-100 transition-all duration-300';
   toast.textContent = 'Email copied to clipboard!';
   document.body.appendChild(toast);
   setTimeout(() => {
     button.classList.remove('bg-[#43d490]/50');
     toast.classList.add('translate-y-full', 'opacity-0');
     setTimeout(() => toast.remove(), 300);
   }, 2000);
 `;
}
