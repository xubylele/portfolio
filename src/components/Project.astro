---
interface Technology {
  name: string;
  icon?: string;
  color: string;
  textColor: string;
}

interface Project {
  title: string;
  description: string;
  image?: string;
  url?: string;
  technologies: Technology[];
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class='mb-8'>
  {
    project && (
      <div class='flex flex-col md:flex-row items-start gap-8'>
        {project.image && (
          <div class='w-full md:w-1/2'>
            <img
              src={project.image}
              alt={project.title}
              class='w-full h-64 rounded-lg shadow-lg object-cover aspect-video'
            />
          </div>
        )}
        <div class='flex-1'>
          <h2 class='text-xl font-semibold mb-4'>{project.title}</h2>
          <p class='text-gray-400 mb-4'>{project.description}</p>
          {project.url && (
            <a
              href={project.url}
              target='_blank'
              rel='noopener noreferrer'
              class='text-[#f6ea5d] hover:text-[#f6ea5d]/90 transition'
            >
              Ver proyecto
            </a>
          )}
          <div class='flex items center gap-2'>
            <p class='text-gray-400'>Tecnolog√≠as:</p>
            <div class='flex gap-2'>
              {project.technologies.map((technology) => (
                <span
                  style={`background-color: ${technology.color}; color: ${technology.textColor};`}
                  class='rounded-full opacity-90 px-2 py-1 text-xs hover:opacity-80 transition cursor-default'
                >
                  {technology.name}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    )
  }
</article>
